<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>
        <% if(product){ %>
            <div class="centered">
                <h1>
                    <%= product.title %>
                </h1>
                <hr>
                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                <h2>$<%= product.price %>
                </h2>
                <p>
                    <%= product.description %>
                </p>
                <%- include('../includes/add-to-cart.ejs') %>
            </div>
            <% } else { %>
                <h2>No product found</h2>
                <% } %>
                    <%- include('../includes/end.ejs') %>